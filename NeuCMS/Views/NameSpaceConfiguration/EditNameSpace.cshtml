<script src="../../Scripts/knockout-2.1.0.js" type="text/javascript"></script>
<script src="../../Scripts/knockout.mapping-latest.js" type="text/javascript"></script>
@model NeuCMS.Models.NameSpaceGridModel
<script type="text/javascript">
    jQuery('#editNamespaceDiv').ready(function () {
        $("#editNamespaceDiv").jqm();
        $("#editNamespaceDiv").jqmShow();
        
        //  Create json instance of model
        var data = @Html.Raw(Json.Encode(Model));
        // Create view model from model where every property is observable
        var viewModel = ko.mapping.fromJS(data);
        viewModel.save = function() {
            ko.utils.postJson('@Url.Action("SaveNameSpace")', {nameSpace: ko.mapping.toJS(viewModel)});
        };
        
        // Apply the bindings
        ko.applyBindings(viewModel);
        
        $("#cancel").click(function() {$("#editNamespaceDiv").jqmHide()});

    });
</script>
<div id="editNamespaceDiv" class="jqmWindow">
    <form data-bind="submit: save">
        <p>
            @Html.LabelFor(m => m.Id)
            <span data-bind="text: Id" />
        </p>
        <p>
            @Html.LabelFor(m => m.NameSpaceName)
            <input data-bind="value: NameSpaceName" />
        </p>
        <p>
            @Html.LabelFor(m => m.Description)
            <input data-bind="value: Description" />
        </p>
        <p>
            <button type="submit">Save</button>    
            <button id="cancel">Cancel</button>    
        </p>
    </form>
</div>